<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?sheet_bg"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/watch_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/watch_text"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?title_text_color"
            android:text="Loading...."
            android:padding="10dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/watch_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:padding="5dp">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watchSheetListView"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch"
            android:layout_below="@id/watchSheetListView"
            android:id="@+id/watchSheetWatch"/>
    </RelativeLayout>
</LinearLayout>